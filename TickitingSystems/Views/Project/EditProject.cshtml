@{
    ViewData["Title"] = "Edit Project";
}
@model TickitingSystems.Models.ProjectModel;



<html>

<head>

</head>
<body>
    <form asp-action="UpdateProject">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <span class="text-danger">*</span>
                    Project Name
                    <input type="text" asp-for="ProjectName" class="form-control" />
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <span class="text-danger">*</span>
                    Clint Name
                    <input type="text" asp-for="ClientName" class="form-control" />
                    <span asp-validation-for="ClientName" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <span class="text-danger">*</span>
                    Contact Person
                    <input type="text" asp-for="ContactPerson" class="form-control" />
                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                </div>
            </div>
            <div class="row" style="padding-top:30px">
                <div class="col-md-4">
                    <span class="text-danger">*</span>
                    DeliverDate
                    <input type="date" asp-for="DeliverDate" class="form-control" />
                    <span asp-validation-for="DeliverDate" class="text-danger"></span>
                </div>
                <div class="col-md-4" style="padding-top:30px">
                    <span class="text-danger">*</span>
                    IsUnderSupport
                    <input type="radio" value="True" class="custom-radio" asp-for="IsUnderSupport" />Yes
                    <input type="radio" value="False" class="custom-radio" asp-for="IsUnderSupport" />No
                    <span asp-validation-for="IsUnderSupport" class="text-danger"></span>
                </div>
            </div>
            <div class="row" style="padding-top:30px">
                <div class="col-md-4">
                    <input type="hidden" asp-for="ProjectId" />
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </div>
    </form>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_validationScriptsPartial");
        }
    }
</body>
</html>

