@{
}
@model List<TickitingSystems.Models.IssueDetailsLogModel>
<html>
<head>
   
</head>
<body>
    <h3>Get All Details for Issue</h3>
  
    <form asp-action="ViewLogTransaction">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Issue Status Name</th>
                    <th>Action Date</th>

                </tr>
            </thead>
            <tbody>
                @foreach (TickitingSystems.Models.IssueDetailsLogModel item in Model)
                {
                    <tr>
                        <td>@item.IssueStatusName</td>
                        <td>@item.ActionDate</td>

                    </tr>
                }
            </tbody>
        </table>
    </form>

</body>
</html>