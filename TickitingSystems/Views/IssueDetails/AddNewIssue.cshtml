@{
}
@model TickitingSystems.Models.IssueDetailsModel
<html>
<head>

</head>
<body>
    <form asp-action="SaveNewIssue">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                Project Name
                <span class="text-danger">*</span>
                <select class="form-control" asp-for="ProjectId" asp-items="@(new SelectList(ViewBag.Project,"ProjectId","ProjectName"))">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                Serverity
                <span class="text-danger">*</span>
                    <select class="form-control" asp-for="ServerityId" asp-items="@(new SelectList(ViewBag.Serverity,"ServerityId","ServerityName"))">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="ServerityId" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                Issue Status
                <span class="text-danger">*</span>
                    <select class="form-control" asp-for="IssueStatusId" asp-items="@(new SelectList(ViewBag.IssueStatus ,"IssueStatesId","IssueStatesName"))">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="IssueStatusId" class="text-danger"></span>
            </div>
        </div>
        <div class="row" style="padding-top:25px">
            <div class="col-md-4">
                Enviroment Type
                <span class="text-danger">*</span>
                <input type="text" class="form-control" asp-for="EnviromentType" />
                <span asp-validation-for="EnviromentType" class="text-danger"></span>
            </div>
            <div class="col-md-8">
                Issue Description
                <span class="text-danger">*</span>
                <textarea type="text" class="form-control" rows="3" asp-for="IssueDescription"></textarea>
                <span asp-validation-for="IssueDescription" class="text-danger"></span>
            </div>
        </div>
         <div class="row" style="padding-top:25px">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>

        </div>

    </div>
    </form>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    </body>
</html>
